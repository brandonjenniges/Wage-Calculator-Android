<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.payboy.brandon">

    <application
        android:name="brandon.payboy.brandon.WageCalculatorApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:configChanges="orientation"
        android:screenOrientation="portrait">

        <activity
            android:name="brandon.payboy.brandon.launcher.LauncherActivity"
            android:label="Wage Calculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="brandon.payboy.brandon.WageCalculatorActivity"
            android:label="@string/title_activity_wage"
            android:screenOrientation="nosensor">
        </activity>


        <activity
            android:name="brandon.payboy.brandon.settings.SettingsActivity"
            android:label="@string/title_activity_wage"
            android:screenOrientation="nosensor">
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="2bc1b233cfb91d29789e264b53638dbf1b62bdf9" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
